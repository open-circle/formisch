{
  "name": "@formisch/core",
  "description": "The modular and type-safe form library for any framework",
  "version": "0.6.0",
  "license": "MIT",
  "author": "Fabian Hiller",
  "homepage": "https://formisch.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/open-circle/formisch"
  },
  "keywords": [
    "modular",
    "typescript",
    "schema",
    "validation",
    "parsing",
    "bundle-size",
    "type-safe"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./preact": {
      "types": "./dist/index.preact.d.ts",
      "default": "./dist/index.preact.js"
    },
    "./qwik": {
      "types": "./dist/index.qwik.d.ts",
      "default": "./dist/index.qwik.js"
    },
    "./solid": {
      "types": "./dist/index.solid.d.ts",
      "default": "./dist/index.solid.js"
    },
    "./svelte": {
      "types": "./dist/index.svelte.d.ts",
      "default": "./dist/index.svelte.js"
    },
    "./react": {
      "types": "./dist/index.react.d.ts",
      "default": "./dist/index.react.js"
    },
    "./vue": {
      "types": "./dist/index.vue.d.ts",
      "default": "./dist/index.vue.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "vitest run",
    "coverage": "vitest run --coverage --isolate",
    "lint": "eslint \"src/**/*.ts*\" && tsc --noEmit",
    "lint.fix": "eslint \"src/**/*.ts*\" --fix",
    "format": "prettier --write ./src",
    "format.check": "prettier --check ./src",
    "build": "tsdown"
  },
  "devDependencies": {
    "@formisch/eslint-config": "workspace:*",
    "@preact/signals": "^2.2.1",
    "@qwik.dev/core": "2.0.0-beta.5",
    "@types/node": "24.0.13",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.31.0",
    "jsdom": "^26.1.0",
    "rolldown": "1.0.0-beta.26",
    "rolldown-plugin-dts": "^0.13.13",
    "solid-js": "^1.9.7",
    "svelte": "^5.36.17",
    "tsdown": "^0.16.8",
    "typescript": "^5.8.3",
    "valibot": "^1.2.0",
    "vitest": "3.2.4",
    "vue": "^3.5.17"
  },
  "peerDependencies": {
    "@qwik.dev/core": "^2.0.0",
    "solid-js": "^1.6.0",
    "svelte": "^5.29.0",
    "typescript": ">=5",
    "valibot": "^1.0.0",
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "@preact/signals": {
      "optional": true
    },
    "@qwik.dev/core": {
      "optional": true
    },
    "solid-js": {
      "optional": true
    },
    "svelte": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  }
}
