{
  "name": "website",
  "description": "The website and docs of Formisch",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Fabian Hiller",
  "homepage": "https://formisch.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/open-circle/formisch"
  },
  "type": "module",
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "vite build -c adapters/vercel-edge/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "contributors": "tsm ./scripts/contributors.ts",
    "deploy": "vercel deploy",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "format": "prettier --write .",
    "format.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\"",
    "llms": "tsm ./scripts/llms.ts",
    "preview": "qwik build preview && vite preview --open",
    "serve": "wrangler pages dev ./dist --compatibility-flags=nodejs_als",
    "sitemap": "tsm ./scripts/sitemap.ts",
    "sources": "tsm ./scripts/sources.ts",
    "start": "vite --open --mode ssr",
    "qwik": "qwik"
  },
  "devDependencies": {
    "@qwik.dev/core": "2.0.0-beta.9",
    "@qwik.dev/router": "2.0.0-beta.9",
    "@shikijs/rehype": "^3.13.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/eslint": "^8.56.12",
    "@types/node": "^22.13.5",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@typescript-eslint/utils": "^8.25.0",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.1",
    "eslint-plugin-qwik": "2.0.0-beta.9",
    "gray-matter": "^4.0.3",
    "prettier": "^3.5.2",
    "rehype-external-links": "^3.0.0",
    "sharp": "^0.33.5",
    "shiki": "^3.13.0",
    "tailwindcss": "^4.1.13",
    "tsm": "^2.3.0",
    "typescript": "^5.7.3",
    "undici": "^7.3.0",
    "vercel": "^29.1.1",
    "vite": "^5.4.20",
    "vite-imagetools": "^7.0.5",
    "vite-plugin-static-copy": "^2.2.0",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "@vercel/og": "^0.6.5",
    "@formisch/qwik": "workspace:*",
    "clsx": "^2.1.1",
    "satori-html": "^0.3.2",
    "valibot": "^1.2.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
